# -*- mode: sh -*-

GO(switch) {
    sudo nixos-rebuild switch $@
}

GO(shell) {
    if [ "$1" ]; then
        nix-shell '<nixpkgs>' -A $1
    else
        echo "Package name required."
    fi
}

GO(build) {
    if [ "$1" ]; then
        nix-shell '<nixpkgs>' -A $1 --command 'configurePhase && buildPhase; return;'
    else
        echo "Package name required."
    fi
}

GO(upgrade-channel) {
    sudo nix-channel --add https://nixos.org/channels/nixos-$1 nixos
}
